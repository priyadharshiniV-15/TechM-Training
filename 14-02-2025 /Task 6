<script>
function pleaseConfirm() {
  var txt;
  if (confirm("Will you go to film today?")) {
    txt = "The User will go to film today!üé¨";
  } else {
    txt = "The User will not go to film today!‚ùå";
  }
  document.getElementById("para1").innerHTML = txt;
}
</script>

