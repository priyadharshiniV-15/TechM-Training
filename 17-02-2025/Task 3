//3. Pass a number, and find if the sum of their digits is an even or odd number
let num=Number(prompt("Enter a Number:"))

function sums(num)
{
    let sum=0
    while(num>0)
    {
        let a=num%10
         sum=sum+a
        num=Math.floor(num/10)
        
    }
   if(sum%2==0)
    console.log("The sum is Even.")
    else
    console.log("The sum is Odd.")
}

sums(num)
